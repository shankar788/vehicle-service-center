<div class="add container">

 
  <% if @all %>
  <%@all.each do |i|%>
    <li class="add">
      Shop_name: <%= i.shop_owner%></li>
    Shop_name:<%= i.shop_name%> <br>
    Location<%= i.location%>  <br>
    Address<%= i.address%>  <br>
    <% a = ServiceType.where(service_center_id:i.id)%>
    <% a.each do |t|%>
        Type of services:<%= t.name%> <br>
        Cost of service:<%=t.cost%>
        <br>
    <%end%>
    <%= link_to 'Resquest for services' ,client_request_path(i.id)%>
    <p>-----------------------------------------------------------------------</p>
    <%end%>


  <%else%>
   nothing have to display
 <%end%>



</div>