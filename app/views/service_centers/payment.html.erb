<section class="p-4 p-md-5" style="
    background-color :  #FF6D28;
  ">
  <div class="row d-flex justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-5">
      <div class="card rounded-3" style="width:120%;">
        <div class="card-body p-4" >
            <p class="fw-bold mb-4">Add your Card here</p>
            <%= form_with url: '/charge', method: :post  do |f| %>
            <div class="row mb-4">
            <%=f.hidden_field :id, value: params[:id]%>
              <div class="col-7">
                <div class="form-outline">
                    <%=f.text_field :number, class: "form-control form-control-lg"%>
                    <%=f.label :number, "Card_number",class:"form-label"%>
                </div>
              </div>
              <div class="col-3">
                <div class="form-outline">
                    <%=f.text_field :exp_month, class: "form-control form-control-lg"%>
                  <%=f.label :exp_month, "Expire_month",class:"form-label"%>
                </div>
              </div>
              <div class="col-3">
                <div class="form-outline">
                    <%=f.text_field :exp_year, class: "form-control form-control-lg"%>
                  <%=f.label :exp_year, "Expire_year",class:"form-label"%>
                </div>
              </div>
              <div class="col-2">
                <div class="form-outline">
                    <%=f.text_field :cvc, class:"form-control form-control-lg"%>
                    <%=f.label :cvc, class: "form-label" %>
                </div>
              </div>
              <div class="col-2">
                <div class="form-outline">
                    <%=f.text_field :amount_to_be_paid, class:"form-control form-control-lg"%>
                    <%=f.label :Amount, class: "form-label" %>
                </div>
              </div>
            </div>
            <%=f.submit "continue", class:"btn btn-info"%>
        </div>
      </div>
    </div>
  </div>
</section>
<%end%>
